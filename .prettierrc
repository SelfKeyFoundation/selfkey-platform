{
  "printWidth": 100,
  "tabWidth": 4,
  "useTabs": true,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "none",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "proseWrap": "never",
  "overrides": [
    {
      "files": "*.jsonld",
      "options": { "parser": "json", "tabWidth": 2, "useTabs": false }
    },
    {
      "files": "*.json",
      "options": { "parser": "json", "tabWidth": 2, "useTabs": false }
    },
    {
      "files": ".prettierrc",
      "options": { "parser": "json", "tabWidth": 2, "useTabs": false }
    }
  ]
}
