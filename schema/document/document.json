{
	"$schema": "https://json-schema.org/draft-07/schema",
	"$id": "http://platform.selfkey.org/schema/document/document.json",
	"type": "object",
	"format": "file",
	"properties": {
		"mimeType": { "type": "string" },
		"size": { "type": "integer" },
		"content": {
			"oneOf": [
				{ "type": "string", "contentEncoding": "base64", "format": "data-url" },
				{ "type": "string", "format": "url" },
				{ "type": "string" }
			]
		}
	},
	"required": ["mimeType", "size", "content"]
}
