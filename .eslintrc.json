{
	"extends": ["standard", "prettier", "prettier/standard"],
	"plugins": ["prettier", "standard", "jest"],
	"parserOptions": {
		"sourceType": "module",
		"allowImportExportEverywhere": true
	},
	"parser": "babel-eslint",
	"env": {
		"es6": true,
		"node": true,
		"jest": true
	},
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"semi": true,
				"endOfLine": "auto"
			}
		],
		"import/no-named-as-default": 0,
		"import/first": 0
	}
}
